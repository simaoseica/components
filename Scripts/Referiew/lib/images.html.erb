<!doctype html>
<html lang="en">
    <head>
        <title>Shopfloor App Components</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
        <link rel="stylesheet" href="style.css">
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js" integrity="sha384-smHYKdLADwkXOn1EmN1qk/HfnUcbVRZyYmZ4qpPea6sjB/pTJ0euyQp0Mk8ck+5T" crossorigin="anonymous"></script>
    </head>
    <body>

      <div class="jumbotron jumbotron-fluid py-4">
        <div class="container">
          <h1 class="display-4">Shopfloor App Components</h1>
          <p class="lead">Farfetch Â®</p>
          <hr>
          <p class="mt-2">
            <% if @components.empty? %>
              This project has no components yet!
            <% else %>
              <h1><span class="badge badge-secondary"><%= @components.length %> Components</span></h1>
            <% end %>
          </p>
        </div>
      </div>

      <div class ="container">
        <ul class="pl-0">
          <% @components.each do |component| %>
            <% name = component[:name] %>
            <% count = component[:images].count %>
            <% id = "demo_" + name %>

            <li class="container card mb-2">

              <h3 class="my-1 clickable" data-toggle="collapse" data-target="#<%= id %>" aria-expanded="false" aria-controls="<%= id %>">
                <a href="<%= component[:code_path] %>" target="blank">
                  <img src="swift.png" width="40px">
                </a>
                <%= name %>
                <span class="badge badge-light">  <%= count %></span>
              </h3>

              <div id="<%= id %>" class="collapse row">

                <% component[:images].each do |image| %>
                  <div class="col-sm-3 mb-3">
                    <div class="card border-0">
                      <img class="component border img-fluid" data-imgsrc="<%= image[:path] %>" style="width: 100%">
                      <div class="card-footer text-muted border" style="margin-top: 10px; border-radius: 0;">
                        <%= image[:name] %>
                      </div>
                    </div>
                  </div>
                <% end %>
                
              </div>

            </li>
          <% end %>
        </ul>
      </div>

      <script src="lazy_load_images.js"></script>
    </body>
</html>
